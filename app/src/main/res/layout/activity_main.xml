                android:textSize="40sp"
                android:onClick="boton"/>

            <Button
                android:id="@+id/button36"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="40sp"
                android:onClick="boton"/>

