            android:textSize="40sp"/>

        <Button
            android:id="@+id/button43"
            android:layout_width="match_parent"
            android:layout_height="82.1dp"
            android:text="*"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/button42"
            android:layout_width="match_parent"
            android:layout_height="82.1dp"
            android:text="-"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/button41"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="40sp"/>
